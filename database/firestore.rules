rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - each user can read/write their own profile
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId && 
                       request.resource.data.uid == request.auth.uid;
      allow update: if request.auth.uid == userId;
      allow delete: if request.auth.uid == userId;
    }

    // Expenses collection - user can read/write their own expenses
    match /expenses/{expenseId} {
      allow create: if request.auth.uid == request.resource.data.createdBy;
      allow read: if request.auth.uid == resource.data.createdBy ||
                     request.auth.uid in resource.data.participants;
      allow update: if request.auth.uid == resource.data.createdBy;
      allow delete: if request.auth.uid == resource.data.createdBy;
    }

    // Balances collection - track who owes whom
    match /balances/{balanceId} {
      allow create: if request.auth.uid != null;
      allow read: if request.auth.uid == resource.data.payerId ||
                     request.auth.uid == resource.data.payeeId;
      allow update: if request.auth.uid == resource.data.payerId ||
                       request.auth.uid == resource.data.payeeId;
      allow delete: if request.auth.uid == resource.data.payerId;
    }

    // Settings collection - per user settings
    match /settings/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
